# App Configuration
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./chordcircle.db
# For PostgreSQL: postgresql://user:password@localhost/chordcircle
# For MySQL: mysql://user:password@localhost/chordcircle

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/auth/spotify/callback

# Apple Music API
APPLE_MUSIC_TEAM_ID=your_apple_music_team_id
APPLE_MUSIC_KEY_ID=your_apple_music_key_id
APPLE_MUSIC_PRIVATE_KEY=your_apple_music_private_key

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password